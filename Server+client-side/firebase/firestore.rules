rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    function hasOnlyKeys(data, keys) {
      return data.keys().hasOnly(keys);
    }

    function isValidPlayerProfile(uid) {
      return isOwner(uid)
        && request.resource.data.uid == uid
        && request.resource.data.email is string
        && request.resource.data.displayName is string
        && request.resource.data.level is int
        && request.resource.data.level >= 1
        && request.resource.data.xp is int
        && request.resource.data.nops is int
        && request.resource.data.flux is int
        && request.resource.data.rankPoints is int
        && request.resource.data.isAdmin == false
        && request.resource.data.isBanned == false
        && request.resource.data.featureFlags is map
        && hasOnlyKeys(request.resource.data, [
          'uid', 'email', 'displayName', 'photoURL', 'createdAt', 'updatedAt',
          'isAdmin', 'isBanned', 'banReason', 'level', 'xp', 'nops', 'flux',
          'rankPoints', 'featureFlags'
        ]);
    }

    function isSafePlayerUpdate(uid) {
      return isOwner(uid)
        && request.resource.data.uid == resource.data.uid
        && request.resource.data.email == resource.data.email
        && request.resource.data.isAdmin == resource.data.isAdmin
        && request.resource.data.isBanned == resource.data.isBanned
        && request.resource.data.banReason == resource.data.banReason
        && request.resource.data.level == resource.data.level
        && request.resource.data.xp == resource.data.xp
        && request.resource.data.nops == resource.data.nops
        && request.resource.data.flux == resource.data.flux
        && request.resource.data.rankPoints == resource.data.rankPoints;
    }


    function isValidLessonProgress(uid, commandId) {
      return isOwner(uid)
        && request.resource.data.commandId == commandId
        && request.resource.data.completed == true
        && request.resource.data.trait in [null, 'spring']
        && request.resource.data.completedAt == request.time
        && request.resource.data.keys().hasOnly(['commandId', 'completed', 'completedAt', 'trait']);
    }

    // Client-submitted command run payloads are restricted and validated.
    // Backend processors should verify cooldown + reward bounds again.
    function isValidPhishRun(uid) {
      return isOwner(uid)
        && request.resource.data.commandId == 'phish'
        && request.resource.data.nonce is string
        && request.resource.data.success is bool
        && request.resource.data.earnedNops is int
        && request.resource.data.earnedNops >= 1
        && request.resource.data.earnedNops <= 5
        && request.resource.data.executedAt == request.time
        && (
          !exists(/databases/$(database)/documents/players/$(uid)/commandState/phish)
          || request.time >= get(/databases/$(database)/documents/players/$(uid)/commandState/phish).data.nextAllowedAt
        );
    }

    match /players/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isValidPlayerProfile(uid);
      allow update: if isSafePlayerUpdate(uid) || isAdmin();
      allow delete: if false;

      match /commandRuns/{runId} {
        allow read: if isOwner(uid) || isAdmin();
        allow create: if isValidPhishRun(uid);
        allow update, delete: if false;
      }

      match /commandState/{commandId} {
        allow read: if isOwner(uid) || isAdmin();
        // Updated by backend authority only (Cloud Functions/Admin SDK)
        allow write: if false;
      }

      match /inventory/{itemId} {
        allow read: if isOwner(uid) || isAdmin();
        allow write: if false;
      }

      match /lessonProgress/{commandId} {
        allow read: if isOwner(uid) || isAdmin();
        allow create, update: if isValidLessonProgress(uid, commandId);
        allow delete: if false;
      }
    }

    match /commandCatalog/{commandId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /stocks/{ticker} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /pvpQueue/{ticketId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    match /adminActions/{actionId} {
      allow read, write: if isAdmin();
    }

    match /liveOps/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
